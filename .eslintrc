{
  "parser": "babel-eslint",
  "extends": [
    "shortlyster",
    "prettier"
  ],
  "plugins": [
    "react",
    "prettier"
  ],
  "settings": {
    "react": {
      "pragma": "h"
    }
  },
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true,
    }],
    "react/jsx-filename-extension": "off",
    "react/require-default-props": "off"
  },
  "globals": {
    "document": "true",
    "expect": "true",
    "Firebase": "true",
    "window": "true"
  }
}
